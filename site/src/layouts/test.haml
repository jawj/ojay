!!!
- script_map = lambda { |s| "http://yui.yahooapis.com/2.7.0/build/#{ s.gsub(/\-beta$/, '') }/#{s}.js" }
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "Content-type", :content => "text/html; charset=utf-8"}/
    %title Ojay: Test suite
    =javascripts 'globals', 'yui/2.7.0', 'ext','sizzle', 'peppy', 'ojay/all', 'test/enumerable', 'test/set'
    =stylesheets 'logger', 'testlogger', 'test'
    =javascripts *( %w(logger yuitest).map &script_map )
  %body{:id => "test-#{current_page.sub('.html', '').split('/').last}"}
    #content
      =yield
