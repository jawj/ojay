#form-wrapper
  %form#login{:method => 'get'}
    %div
      %label
        Username
        %input{:name => 'username'}
    %div
    %div{:class => "notshown"}
      %input{:name => 'notshown'}
    %div
      %label
        Confirm username
        %input{:name => 'username_confirmation'}
    %div
      %label{:for => 'email'} Your email
      %input{:name => 'email', :id => 'email'}
